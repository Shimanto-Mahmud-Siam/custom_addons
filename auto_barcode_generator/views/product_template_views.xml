<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add the barcode field and the "Generate" button to the product form view -->
        <record id="product_template_form_view_inherit_barcode_generator" model="ir.ui.view">
            <field name="name">product.template.form.inherit.barcode.generator</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Placing the barcode field and button after the 'name' field, which is always present -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="barcode"/>
                    <button name="action_generate_barcode"
                            type="object"
                            string="Generate"
                            class="oe_highlight"
                            modifiers='{"invisible": [["barcode", "!=", false]]}'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
