<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_jewellery_info_form" model="ir.ui.view">
            <field name="name">product.template.jewellery.info.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="is_jewellery"/>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Jewellery Info" name="jewellery_info" invisible="not is_jewellery">
                        <group>
                            <group>
                                <field name="product_karat"/>
                                <field name="weight_in_grams"/>
                                <field name="hallmark"/>
                                <field name="certificate_name"/>  </group>
                            <group>
                                <field name="labor_cost"/>
                                <field name="final_sale_price"/>
                            </group>
                        </group>
                        <group string="Weight Breakdown">
                            <group>
                                <field name="weight_in_bhori_only"/>
                                <field name="weight_in_ana"/>
                                <field name="weight_in_rokti"/>
                                <field name="weight_in_point"/>
                            </group>
                            <group>
                                <field name="gold_silver_base_price"/>
                                <field name="gold_silver_base_price_bhori"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>